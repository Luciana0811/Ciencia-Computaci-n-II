//PROBLEMA 1
#include <iostream>
using namespace std;
 
int main() {
    int x,y,auxiliar;
    int *ptrx=&x;
    int *ptry=&y;
    cout<<"INDICAR X: ";
    cin>>x;
    cout<<"INDICAR Y : ";
    cin>>y;
   
    auxiliar=*ptrx;
    *ptrx=*ptry;
    *ptry=auxiliar;
    cout<<"VALORES INTERCAMBIADOS SON:" <<endl;
    cout<<"X :"<<x<<endl;
    cout<<"Y :"<<y<<endl;
}

